%html{:lang => "ja"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title MusiQ | DTM専門の質問サイト
    = csrf_meta_tags
    = csp_meta_tag
